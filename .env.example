# üåê SBD Inventory System - Environment Variables

# Database Configuration (Docker)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=sbd_inventory
DB_USER=sbd_user
DB_PASSWORD=sbd_password

# For Docker development, you can also use:
# DB_HOST=postgres (if running inside Docker network)

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Optional: CORS Configuration
CORS_ORIGIN=*

# Optional: Logging
LOG_LEVEL=info 